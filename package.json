{
  "name": "swarm-vault",
  "private": true,
  "version": "0.1.0",
  "description": "Platform for managers to execute transactions on behalf of multiple users via ZeroDev smart wallets and Lit Protocol",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "prisma generate && pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "pnpm --filter @swarm-vault/server db:seed"
  },
  "devDependencies": {
    "@prisma/client": "5.22.0",
    "prisma": "^5.22.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
